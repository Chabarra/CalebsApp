<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash" 
    android:background="#000">
    
    <!-- Setups the views for the app splash screen. This is the logo you see on startup -->

    <ImageView
        android:id="@+id/aaaLogobig"
        android:contentDescription="@string/aaaLogodesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/aaatitle" />

    <!-- This sets the version number directly below. This is a STRING and does NOT
    pull from the AndroidManifest.xml version number, remember to set it. -->
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/version"
        android:textColor="#FFF"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
